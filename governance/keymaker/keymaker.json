        "revoke": [
          "locate UID",
          "set revoked timestamp",
          "retain for audit"
        ],
        "rotate": [
          "revoke current",
          "generate new",
          "append new with revoked=null"
        ],
        "verify": [
          "exists",
          "revoked is null",
          "identity.active == true"
